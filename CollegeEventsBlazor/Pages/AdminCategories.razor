@page "/admin/categories"
@using CollegeEventsBlazor.Models
@using CollegeEventsBlazor.Services
@inject ApiClient Api

<AuthorizeView Roles="Admin">
    <Authorized>
        <div class="main">
            <div class="card">
                <div class="card-header">
                    <div>
                        <h1 class="page-title">Admin • Categories</h1>
                        <p class="muted">Create, edit and delete categories.</p>
                    </div>
                    <button class="btn-icon" title="Reload" @onclick="Load">⟳</button>
                </div>

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <div class="alert alert-danger">@_error</div>
                }
                @if (!string.IsNullOrWhiteSpace(_ok))
                {
                    <div class="alert alert-ok">@_ok</div>
                }

                <div class="grid-2">
                    <!-- FORM -->
                    <div class="card card-soft">
                        <div class="card-header">
                            <h2 class="section-title">@(_editId == 0 ? "Create Category" : $"Edit Category #{_editId}")</h2>
                            @if (_editId != 0)
                            {
                                <span class="chip">Editing</span>
                            }
                        </div>

                        <div class="form">
                            <label>Name</label>
                            <input placeholder="e.g., Workshop" @bind="_name" />

                            <div class="btn-row">
                                <button class="btn-primary" @onclick="Save">Save</button>
                                <button class="btn-ghost" @onclick="Clear">Clear</button>
                            </div>
                        </div>
                    </div>

                    <!-- LIST -->
                    <div class="card card-soft">
                        <div class="card-header">
                            <h2 class="section-title">All Categories</h2>
                            <button class="btn-ghost" @onclick="Load">Reload</button>
                        </div>

                        @if (_categories == null)
                        {
                            <p class="muted">Loading…</p>
                        }
                        else if (_categories.Count == 0)
                        {
                            <p class="muted">No categories yet.</p>
                        }
                        else
                        {
                            <div class="list">
                                @foreach (var c in _categories.OrderBy(x => x.Name))
                                {
                                    <div class="list-item">
                                        <div class="list-item-header">
                                            <div style="font-weight:800;">@c.Name</div>
                                            <span class="chip">#@c.Id</span>
                                        </div>

                                        <div class="row-actions">
                                            <button class="btn-outline" @onclick="() => Edit(c)">Edit</button>
                                            <button class="btn-danger" @onclick="() => Delete(c.Id)">Delete</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </Authorized>

    <NotAuthorized>
        <div class="main">
            <div class="card">
                <h2>Admin only</h2>
                <p class="muted">You do not have permission to view this page.</p>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<CategoryDto>? _categories;
    private int _editId;

    private string _name = "";
    private string _error = "";
    private string _ok = "";

    protected override async Task OnInitializedAsync() => await Load();

    private async Task Load()
    {
        _error = ""; _ok = "";
        try
        {
            _categories = await Api.GetCategoriesAsync();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            _categories = new();
        }
    }

    private void Edit(CategoryDto c)
    {
        _editId = c.Id;
        _name = c.Name;
        _error = ""; _ok = "";
    }

    private void Clear()
    {
        _editId = 0;
        _name = "";
        _error = ""; _ok = "";
    }

    private async Task Save()
    {
        _error = ""; _ok = "";
        try
        {
            if (string.IsNullOrWhiteSpace(_name))
                throw new Exception("Name is required.");

            var dto = new CategoryDto { Id = _editId, Name = _name.Trim() };

            if (_editId == 0)
            {
                await Api.CreateCategoryAsync(dto);
                _ok = "Category created.";
            }
            else
            {
                await Api.UpdateCategoryAsync(_editId, dto);
                _ok = "Category updated.";
            }

            Clear();
            await Load();
        }
        catch (Exception ex) { _error = ex.Message; }
    }

    private async Task Delete(int id)
    {
        _error = ""; _ok = "";
        try
        {
            await Api.DeleteCategoryAsync(id);
            _ok = "Category deleted.";
            await Load();
        }
        catch (Exception ex) { _error = ex.Message; }
    }
}